@model Actor

@{
    ViewData["Title"] = "Delete Confirmation for actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.FullName?</h1>
        </p>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="mb-3 text-center">
                <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px;"/>
            </div>
            <div class="mb-3">
                <label asp-for="ProfilePic" class="control-label"></label>
                <input asp-for="ProfilePic" class="form-control" readonly/>
                <span asp-validation-for="ProfilePic" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" readonly/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" readonly/>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirm" class="btn btn-danger" style="float:right;" /> 
                </form>
                <a class="btn btn-outline-success" asp-action="Index" asp-route-id="@Model.Id">Show all</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
        <script>
            $(document).ready(function() {
                var output = document.getElementById('ProfilePicturePreview');
                output.src = $("#ProfilePic").val();
            })
        </script>
}