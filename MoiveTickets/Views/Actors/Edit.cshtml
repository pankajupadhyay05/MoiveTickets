@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Actor</h1>
        </p>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px;" />
                </div>
                <div class="mb-3">
                    <label asp-for="ProfilePic" class="control-label"></label>
                    <input asp-for="ProfilePic" class="form-control" />
                    <span asp-validation-for="ProfilePic" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Update" class="btn btn-outline-success" style="float:right;" />
                    <a class="btn btn-outline-success" asp-action="Index" asp-controller="Actors">Show all</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePic").val();
        } )

        $("#ProfilePic").on("change", function (){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}